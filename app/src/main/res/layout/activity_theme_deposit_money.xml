<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fece2f"
    tools:context=".ThemeDepositMoney">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A3996E"
            android:layout_margin="10dp"
            app:cardElevation="10dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_nganhang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:includeFontPadding="false"
                    android:text="Ngân hàng:"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_nganhang"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="15dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/txt_sotk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinner1"
                    android:layout_alignParentRight="false"
                    android:layout_marginTop="25dp"
                    android:text="Số tài khoản:"
                    android:textColor="#FFEE55"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_matk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_sotk"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-32dp"
                    android:layout_marginRight="64dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_tentk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_matk"
                    android:layout_marginTop="25sp"
                    android:text="Tên Tài Khoản:"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_matentk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_tentk"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="-34dp"
                    android:layout_marginRight="26dp"
                    android:layout_toRightOf="@+id/txt_tentk"
                    android:text="Huỳnh Thị Cu"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_chiNhanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_matentk"
                    android:layout_marginTop="25sp"
                    android:text="Chi Nhánh:"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_chinhanhbanks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_chiNhanh"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-22dp"
                    android:layout_marginRight="113dp"
                    android:text="Sài Gòn"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#A3996E"
            android:layout_margin="10dp"
            app:cardElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/txt_sotien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_marginTop="35dp"
                    android:text="Số tiền:"
                    android:textColor="#FFEE55"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edt_sotien"
                    android:layout_width="250dp"
                    android:layout_height="50sp"
                    android:layout_below="@+id/txt_sotien"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/txt_sotien"
                    android:layout_marginTop="-50dp"
                    android:layout_marginLeft="20dp"
                    android:hint="Nhập số tiền chuyển">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_withdrawcolor"
                        android:drawablePadding="10dp"
                        android:inputType="number"

                        />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/txt_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_sotien"
                    android:layout_alignParentRight="false"
                    android:layout_marginTop="35dp"
                    android:text="Tài khoản:"
                    android:textColor="#FFEE55"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_tentaikhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ten"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="-26dp"
                    android:layout_toRightOf="@+id/txt_ten"
                    android:text=""
                    android:textColor="#FFEE55"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_xacnhannap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ten"
                    android:layout_centerInParent="true"
                    android:text="Xác nhận" />





            </RelativeLayout>
























        </com.google.android.material.card.MaterialCardView>
















    </LinearLayout>



















</LinearLayout>