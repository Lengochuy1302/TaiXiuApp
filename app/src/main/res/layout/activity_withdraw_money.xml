<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Withdraw_Money">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_color"
            android:layout_marginTop="-120dp"
            android:padding="20dp">

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="-120dp"
            android:background="@drawable/bg_withdraw"
            android:padding="5dp"

            >

            <TextView
                android:id="@+id/txt_currentCoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Current Coins"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_currentCoins"
                android:gravity="center"
                android:text="500.000"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="50dp"  >

            <TextView
                android:id="@+id/txt_taikhoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài Khoản:"
                android:textColor="#FFEE55"
                android:textSize="20sp"
                android:textStyle="bold"

                />





            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_nganhang"
                android:background="@android:drawable/btn_dropdown"
                android:padding="15dp"
                android:spinnerMode="dropdown" />




            <com.google.android.material.textfield.TextInputLayout
                android:hint="Nhập số tài khoản"
                android:id="@+id/edt_sotaikhoan"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:background="@drawable/bg_withdrawcolor"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:inputType="number"

                    />



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="Nhập tên tài khoản"
                android:id="@+id/edt_tentaikhoan"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_withdrawcolor"
                    android:layout_width="match_parent"
                    />



            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Nhập số tiền rút"
                android:id="@+id/edt_sotienrut"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_withdrawcolor"
                    android:layout_width="match_parent"
                    android:inputType="number"/>



            </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


        <Button
            android:id="@+id/btn_ruttien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fece2f"
            android:fontFamily="@font/bungee"
            android:text="Xác nhận "
            android:textColor="#455A64" />

    </LinearLayout>






    </LinearLayout>